<div class="heading">
  <h2>Register a new faq</h2>
</div>

<%= form_for(@question) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :title%><br />
    <%= f.text_field :title, :size => "76" %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit 'Register' %>
  </div>
<% end %>
